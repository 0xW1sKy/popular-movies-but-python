#!/usr/bin/env node
var Promise = require('bluebird')
var index = require('../index')
var s3 = require('../lib/s3')
var winston = require('../lib/winston');

Promise.resolve(index())
  .then(function (movies) {
    return s3.upload('movies.json', JSON.stringify(movies))
  })
  .then(function () {
    process.exit(0)
  })
  .catch(function (err) {
    winston.error(err)
    process.exit(1)
  })
